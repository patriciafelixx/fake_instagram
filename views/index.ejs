<!DOCTYPE html>
<html>
  <head>
    <title>Fake Instagram</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel='stylesheet' href='/css/style.css' />
  </head>
  <body>
    <header>
      <div class="container header">
        <div id="logo">
          <img src="/img/logo.png">
        </div>
        <div class="busca">
          <form>
            <input type="search" class="search" placeholder="buscar usuarios">
          </form>
        </div>
        <nav>
          <a href="http://">
            <img src="/img/icons/home.svg">
          </a>
          <a href="">
            <div class="avatar-content">
              <img class="avatar" src="/img/avatar-example.png">
              <b><%= user.nome %></b>
            </div>
          </a>
        </nav>
      </div>
    </header>
    <main class="container content">
    
    <% for (post of posts) { %>
      <div class="card">
        <div class="card-header">
          <div>
            <img class="avatar" src="/img/avatar-example.png">
            <b><%= post.usuario.nome %></b>
          </div>
            <img src="/img/icons/more-vertical.svg">
        </div>
        <div class="card-img">
          <img src="/img/publication_example.jpg">
        </div>
        <div class="card-body">
          <div class="card-itens">
            <div class="likes">
              <img src="/img/icons/heart.svg">
              <b><%= post.n_likes%> likes</b>
            </div>
            <b>Postado no dia: 16/04/2020</b>
          </div>
          <div class="card-comments">
            <p><%= post.texto %></p>
            <% for (comentario of post.comentarios) { %>
              <p><b><%= comentario.usuario.nome%></b> <%= comentario.texto%></p>
            <% } %>
          </div>
         
        </div>
        <form class="form-comments" action="">
          <input type="text" placeholder="Adicione um comentÃ¡rio...">
          <button>Publicar</button>
        </form>
      </div>
    <% } %> 
    </main>
  </body>
</html>
